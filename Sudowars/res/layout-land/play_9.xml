<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >
    
	<org.sudowars.View.SudokuField
		android:id="@+id/sudoku_field"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp" />
    
    <TableLayout
        android:id="@+id/keypad"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_weight="1" >
        
        <TableRow android:layout_weight="1">
            <org.sudowars.View.SudokuButton
                style="@style/KeypadButton"
                android:id="@+id/key1" />
            <org.sudowars.View.SudokuButton
                style="@style/KeypadButton"
                android:id="@+id/key2" />
            <org.sudowars.View.SudokuButton
                style="@style/KeypadButton"
                android:id="@+id/key3" />
        </TableRow>
    
        <TableRow android:layout_weight="1">
            <org.sudowars.View.SudokuButton
                style="@style/KeypadButton"
              android:id="@+id/key4" />
            <org.sudowars.View.SudokuButton
                style="@style/KeypadButton"
                android:id="@+id/key5" />
            <org.sudowars.View.SudokuButton
                style="@style/KeypadButton"
                android:id="@+id/key6" />
        </TableRow>
    
        <TableRow android:layout_weight="1">
            <org.sudowars.View.SudokuButton
                style="@style/KeypadButton"
                android:id="@+id/key7" />
            <org.sudowars.View.SudokuButton
                style="@style/KeypadButton"
                android:id="@+id/key8" />
            <org.sudowars.View.SudokuButton
                style="@style/KeypadButton"
                android:id="@+id/key9" />
        </TableRow>
    
        <TableRow android:layout_weight="1">
            <ImageButton
                style="@style/KeypadButton"
                android:id="@+id/key_invert"
                android:src="@drawable/ic_input_invert"
                android:contentDescription="@string/button_invert"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxHeight="0dp"
                android:minWidth="0dp"/>
            <ImageButton
                style="@style/KeypadButton"
                android:id="@+id/key_clear"
                android:src="@drawable/ic_input_clear"
                android:contentDescription="@string/button_clear"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxHeight="0dp"
                android:minWidth="0dp"/>
            <org.sudowars.View.SudokuButton
                android:visibility="invisible" />
        </TableRow>
        
    </TableLayout>
    
</LinearLayout>
