<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- System colors -->
    <color name="BLACK">@android:color/black</color>
    <color name="DKGRAY">#444444</color>
    <color name="GRAY">#888888</color>
    <color name="LTGRAY">#CCCCCC</color>
    <color name="WHITE">@android:color/white</color>
    <color name="RED">#FF0000</color>
    <color name="CYAN">#00FFFF</color>
    <color name="YELLOW">#C8C800</color>
    
    
    <!-- Player colors -->
    <color name="actionbar_score_local_foreground">@color/WHITE</color>
    <color name="actionbar_score_local_background">#000060</color>
    <color name="actionbar_score_remote_foreground">@color/BLACK</color>
    <color name="actionbar_score_remote_background">@color/YELLOW</color>
    
    <!-- Buttons colors -->
    <color name="button_clear_normal_foreground">@color/WHITE</color>
    <color name="button_clear_normal_background">@color/DKGRAY</color>
    <color name="button_clear_toggled_foreground">@color/WHITE</color>
    <color name="button_clear_toggled_background">@color/BLACK</color>
    
    <color name="button_invert_normal_foreground">@color/WHITE</color>
    <color name="button_invert_normal_background">@color/DKGRAY</color>
    <color name="button_invert_toggled_foreground">@color/WHITE</color>
    <color name="button_invert_toggled_background">@color/BLACK</color>
    
    <color name="button_symbols_normal_foreground">@color/WHITE</color>
    <color name="button_symbols_normal_background">@color/DKGRAY</color>
    <color name="button_symbols_notice_foreground">@color/BLACK</color>
    <color name="button_symbols_notice_background">@color/LTGRAY</color>
    <color name="button_symbols_cell_value_foreground">@color/BLACK</color>
    <color name="button_symbols_cell_value_background">@color/CYAN</color>
    <color name="button_symbols_toggled_foreground">@color/WHITE</color>
    <color name="button_symbols_toggled_background">@color/BLACK</color>
    <color name="button_symbols_toggled_and_cell_value_foreground">@color/CYAN</color>
    <color name="button_symbols_toggled_and_cell_value_background">@color/BLACK</color>
    
    <!-- Game message color -->
    <color name="text_counter">@color/LTGRAY</color>
    <color name="text_game_over">@color/CYAN</color>
    <color name="text_pause">@color/CYAN</color>
    
    <!-- Sudoku field colors -->
    <color name="sudoku_field_bold_line">@color/WHITE</color>
    <color name="sudoku_field_normal_line">@color/WHITE</color>
    <color name="sudoku_field_selected">@color/CYAN</color>
    <color name="sudoku_field_invalid">@color/RED</color>
    <color name="sudoku_field_remote">@color/actionbar_score_remote_background</color>
    <color name="sudoku_field_normal">@color/WHITE</color>
    <color name="sudoku_field_pending_paint">@color/ORANGE</color>
    <color name="sudoku_field_normal_selected">@color/BLACK</color>
    <color name="sudoku_field_initial">@color/GRAY</color>
    <color name="sudoku_field_normal_invalid">@color/RED</color>
    <color name="sudoku_field_field_disabled">@color/DKGRAY</color>
    <color name="sudoku_field_notice">@color/WHITE</color>
    <color name="sudoku_field_notice_selected">@color/BLACK</color>
    <color name="sudoku_field_pending_paint">@color/actionbar_score_local_background</color>
    
    
    
    <!-- Manual colors -->
    <color name="manual_page_background">@color/LTGRAY</color>
    <color name="manual_title">@color/DKGRAY</color>
    <color name="manual_title_shadow">@color/WHITE</color>
    <color name="manual_body">@color/DKGRAY</color>
    <color name="manual_body_shadow">@color/WHITE</color>
    <color name="manual_indicator_bar">#66000000</color>
    <color name="manual_indicator_circle">#FF222222</color>
    <color name="manual_next_button">#FF222222</color>
    <color name="manual_next_button_shadow">@color/GRAY</color>
    
</resources>